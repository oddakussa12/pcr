
@model Actiono
@{
    ViewData["Title"] = "Adding Project Action";
}
<head>
    <link rel="stylesheet" href="~/css/AddProjectRisk.css" />
</head>
<div class="row" style="background-color:white; margin-left:10%; width:80%;">
    <div class="col-md-10 shadow-lg p-3 mb-5 bg-white rounded" style="margin-left:8%; margin-top:80px;">
        <form asp-controller="ActionoController" asp-action="AddActiono" method="post">
            <br />
            <h3 style="color:#003cff;">Adding Project Action</h3>
            <hr />
            <div class="text-success">@ViewBag.Success</div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="leftright" style="padding-left:5%;padding-right:5%;">
                <div class="form-group">
                    <label asp-for="ActionoDescription"></label>
                    <input asp-for="ActionoDescription" class="form-control" />
                    <span asp-validation-for="ActionoDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ActionoOwner"></label>
                    <input asp-for="ActionoOwner" class="form-control" />
                    <span asp-validation-for="ActionoOwner" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ActionoResponsible"></label>
                    <input asp-for="ActionoResponsible" class="form-control" />
                    <span asp-validation-for="ActionoResponsible" class="text-danger"></span>
                </div>
                <div style="width:50%; margin-top:40px;">
                    <button class="btn btn-danger btn-block" asp-controller="Actiono"
                            asp-action="ActionoTable" asp-route-id="@ViewBag.ProjectCode">Cancel </button>
                </div>

            </div>
            <div class="leftright" style="padding-left:5%;padding-right:5%;">
                @*<div class="form-group">
                    <label asp-for="ActionnoStatus"></label>
                    <input asp-for="ActionnoStatus" class="form-control" />
                    <span asp-validation-for="ActionnoStatus" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <label asp-for="ActionnoStatus"></label>
                    <div>
                        <select asp-for="ActionnoStatus" class="custom-select mr-sm-2"
                                asp-items="Html.GetEnumSelectList<ClosedOpened>()">
                            <option value="">Please select</option>
                        </select>
                    </div>
                    <span asp-validation-for="ActionnoStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ActionoDeadline"></label>
                    <input asp-for="ActionoDeadline" class="form-control" />
                    <span asp-validation-for="ActionoDeadline" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ActionoLastUpdate"></label>
                    <input asp-for="ActionoLastUpdate" class="form-control" />
                    <span asp-validation-for="ActionoLastUpdate" class="text-danger"></span>
                </div>
                <div style="margin-left:50%; width:50%; margin-top:40px;">
                    <input type="submit" class="btn btn-primary btn-block" value="Add Action" />
                </div>
            </div>
        </form>
    </div>

</div>
