
@model ResetPassword
@{
        Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css" />
</head>
<body onload="document.getElementById('id01').style.display='block'" style="width:auto;">
    <div id="id01" class="modal">
        <div class="row">
            <div style="margin-left:37%;  width:25%;">
                <form method="post" class="modal-content animate" style="padding:16px; height:400px;">
                    <h5 style="">Enter your new password</h5>
                    <hr />
                    <input asp-for="Token" type="hidden"/>
                    <input asp-for="Email" type="hidden"/>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary" style="margin-top:15px;">Reset</button>
                    
                </form>

            </div>
        </div>
    </div>

</body>
